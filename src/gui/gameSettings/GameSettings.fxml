<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.gameSettings.GameSettingsController">
   <children>
      <ImageView fitHeight="400.0" fitWidth="403.0" layoutX="100.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../LIFE.png" />
         </image>
      </ImageView>
      <Label layoutX="167.0" layoutY="331.0" text="Starting Money" textFill="#fffdfd">
         <font>
            <Font name="Berlin Sans FB" size="12.0" />
         </font>
      </Label>
      <Label layoutX="167.0" layoutY="287.0" text="Number of Players (2-3) : " textFill="WHITE" />
      <HBox layoutX="303.0" layoutY="287.0" prefHeight="31.0" prefWidth="152.0" spacing="50.0">
         <children>
            <Button fx:id="dpButton" mnemonicParsing="false" onAction="#decrementPlayer" text="-" />
            <Label fx:id="playerLabel" prefHeight="17.0" prefWidth="0.0" text="2" textFill="WHITE" />
            <Button fx:id="ipButton" mnemonicParsing="false" onAction="#incrementPlayer" text="+" />
         </children>
      </HBox>
      <HBox fx:id="imButton" layoutX="300.0" layoutY="330.0" prefHeight="31.0" spacing="35.0">
         <children>
            <Button fx:id="dmButton" mnemonicParsing="false" onAction="#decrementMoney" text="-" />
            <Label fx:id="moneyLabel" prefHeight="17.0" text="200000" textFill="WHITE" />
            <Button fx:id="imButton" mnemonicParsing="false" onAction="#incrementMoney" text="+" />
         </children>
      </HBox>
      <Button layoutX="100.0" layoutY="374.0" mnemonicParsing="false" onAction="#backToMenu" text="Back" />
      <Button layoutX="459.0" layoutY="374.0" mnemonicParsing="false" onAction="#runGame" text="Start" />
   </children>
</AnchorPane>
