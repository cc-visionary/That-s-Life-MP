<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane style="-fx-background-color: #efbbcf;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.gameSettings.GameSettingsController">
   <children>
      <VBox alignment="CENTER" spacing="10.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <ImageView fitHeight="400.0" fitWidth="403.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../images/logo.png" />
               </image>
            </ImageView>
            <HBox alignment="CENTER">
               <children>
                  <Label text="Number of Players (2-3) : " textFill="WHITE" />
                  <HBox prefHeight="31.0" prefWidth="152.0" spacing="46.5">
                     <children>
                        <Button fx:id="dpButton" mnemonicParsing="false" onAction="#decrementPlayer" text="-" />
                        <Label fx:id="playerLabel" prefHeight="17.0" prefWidth="0.0" text="2" textFill="WHITE" />
                        <Button fx:id="ipButton" mnemonicParsing="false" onAction="#incrementPlayer" text="+" />
                     </children>
                  </HBox>
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="50.0">
               <children>
                  <Label text="Starting Money :" textFill="#fffdfd" />
                  <HBox prefHeight="31.0" spacing="30.0">
                     <children>
                        <Button fx:id="dmButton" mnemonicParsing="false" onAction="#decrementMoney" text="-" />
                        <Label fx:id="moneyLabel" prefHeight="17.0" text="200000" textFill="WHITE" />
                        <Button fx:id="imButton" mnemonicParsing="false" onAction="#incrementMoney" text="+" />
                     </children>
                  </HBox>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
      <Button mnemonicParsing="false" onAction="#runGame" text="Start" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0" />
      <Button layoutX="100.0" layoutY="374.0" mnemonicParsing="false" onAction="#backToMenu" text="Back" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" />
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</AnchorPane>
